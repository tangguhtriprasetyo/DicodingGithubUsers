<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/white"
                android:contentDescription="@string/back_button"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/tv_title_detail"
                style="@style/Title"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@string/tv_username" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view_detail"
        android:orientation="horizontal"
        android:padding="32dp">

        <ImageView
            android:id="@+id/img_detail_avatar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:contentDescription="@string/user_avatar"
            android:scaleType="centerCrop"
            tools:src="@drawable/bg_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TitleContent"
                android:text="@string/tv_name" />

            <TextView
                android:id="@+id/tv_detail_name"
                style="@style/ContentDetail"
                android:text="@string/tv_name" />

            <TextView
                style="@style/TitleContent"
                android:text="@string/tv_username" />

            <TextView
                android:id="@+id/tv_detail_username"
                style="@style/ContentDetail"
                android:text="@string/tv_username" />

            <TextView
                style="@style/TitleContent"
                android:text="@string/tv_location" />

            <TextView
                android:id="@+id/tv_detail_location"
                style="@style/ContentDetail"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:text="@string/tv_location" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_detail_header"
        android:layout_centerInParent="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TitleContent"
                android:text="@string/tv_company"
                android:textColor="@color/colorSubtitle" />

            <TextView
                android:id="@+id/tv_detail_company"
                style="@style/TextContent"
                android:text="@string/tv_company"
                android:textColor="@color/gray_dark"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_light" />

        </LinearLayout>

        <LinearLayout style="@style/LinearDetailProfile">

            <TextView
                style="@style/TitleContent"
                android:text="@string/followers"
                android:textColor="@color/colorSubtitle" />

            <TextView
                android:id="@+id/tv_detail_follower"
                style="@style/TextContent"
                android:text="@string/profile_total_follower"
                android:textColor="@color/gray_dark"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_light" />

        </LinearLayout>

        <LinearLayout style="@style/LinearDetailProfile">

            <TextView
                style="@style/TitleContent"
                android:text="@string/followings"
                android:textColor="@color/colorSubtitle" />

            <TextView
                android:id="@+id/tv_detail_following"
                style="@style/TextContent"
                android:text="@string/profile_total_following"
                android:textColor="@color/gray_dark"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_light" />

        </LinearLayout>

        <LinearLayout style="@style/LinearDetailProfile">

            <TextView
                style="@style/TitleContent"
                android:text="@string/profile_title_repo"
                android:textColor="@color/colorSubtitle" />

            <TextView
                android:id="@+id/tv_detail_repository"
                style="@style/TextContent"
                android:text="@string/profile_total_repositories"
                android:textColor="@color/gray_dark"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_light" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>